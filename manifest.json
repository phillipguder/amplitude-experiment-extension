{
  "manifest_version": 3,
  "name": "Amplitude Experiment Inspector",
  "version": "1.0",
  "description": "Lista experimentos ativos e inativos do Amplitude Experiment na p√°gina.",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 